{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Your Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "9.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "9.0.0" },
    { "type": "panel", "id": "table", "name": "Table", "version": "9.0.0" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "9.0.0" },
    { "type": "panel", "id": "piechart", "name": "Pie chart", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" }
  ],
  "editable": true,
  "graphTooltip": 0,
  "id": null,
  "iteration": 1724550000,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Cluster Ready % (current)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "100 * sum(kube_pod_status_ready{condition=\"true\", namespace=~\"$namespace\"}) / count(kube_pod_status_ready{condition=\"true\", namespace=~\"$namespace\"})",
          "legendFormat": "Ready %",
          "refId": "A"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "value", "graphMode": "none", "justifyMode": "auto", "orientation": "auto"},
      "fieldConfig": {"defaults": {"unit": "percent", "decimals": 1}}
    },
    {
      "type": "bargauge",
      "title": "Uptime theo Deployment (trong khoảng thời gian đang chọn)",
      "gridPos": {"x": 8, "y": 0, "w": 16, "h": 8},
      "datasource": "${DS_PROMETHEUS}",
      "options": {"displayMode": "gradient", "orientation": "horizontal"},
      "fieldConfig": {"defaults": {"unit": "percent", "decimals": 1}},
      "targets": [
        {
          "refId": "A",
          "expr": "100 * avg by (namespace, deployment) ( \n  (avg_over_time(kube_pod_status_ready{condition=\"true\", namespace=~\"$namespace\"}[$__range])) \n  * on(namespace,pod) group_left(owner_name) kube_pod_owner{owner_kind=\"ReplicaSet\", namespace=~\"$namespace\"} \n  * on(namespace, owner_name) group_left(deployment) label_replace(kube_replicaset_owner{owner_kind=\"Deployment\", namespace=~\"$namespace\"}, \"deployment\", \"$1\", \"owner_name\", \"(.+)\")\n)",
          "legendFormat": "{{namespace}}/{{deployment}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Uptime theo Pod (trong khoảng thời gian đang chọn)",
      "gridPos": {"x": 0, "y": 4, "w": 24, "h": 10},
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {"defaults": {"unit": "percent", "decimals": 1}},
      "options": {"showHeader": true},
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (avg_over_time(kube_pod_status_ready{condition=\"true\", namespace=~\"$namespace\", pod=~\"$pod\"}[$__range])) \n* on(namespace,pod) group_left(owner_name) kube_pod_owner{owner_kind=\"ReplicaSet\", namespace=~\"$namespace\"} \n* on(namespace, owner_name) group_left(deployment) label_replace(kube_replicaset_owner{owner_kind=\"Deployment\", namespace=~\"$namespace\"}, \"deployment\", \"$1\", \"owner_name\", \"(.+)\")",
          "legendFormat": "{{namespace}}/{{deployment}}/{{pod}}"
        }
      ]
    },
    {
      "type": "piechart",
      "title": "Trạng thái Pod (hiện tại)",
      "gridPos": {"x": 0, "y": 14, "w": 10, "h": 8},
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "count by (phase) (kube_pod_status_phase{namespace=~\"$namespace\"})",
          "legendFormat": "{{phase}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pod Ready (1=Ready, 0=Not Ready)",
      "gridPos": {"x": 10, "y": 14, "w": 14, "h": 8},
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {"defaults": {"unit": "short", "decimals": 0}},
      "targets": [
        {
          "refId": "A",
          "expr": "kube_pod_status_ready{condition=\"true\", namespace=~\"$namespace\", pod=~\"$pod\"}",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ]
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["kubernetes", "uptime", "pods"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "pluginId": "prometheus",
        "label": "Datasource",
        "query": "prometheus"
      },
      {
        "hide": 0,
        "label": "Namespace",
        "name": "namespace",
        "query": "label_values(kube_pod_status_phase, namespace)",
        "refresh": 2,
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "hide": 0,
        "label": "Pod",
        "name": "pod",
        "query": "label_values(kube_pod_status_ready{namespace=~\"$namespace\"}, pod)",
        "refresh": 2,
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "time": {"from": "now-7d", "to": "now"},
  "timepicker": {"refresh_intervals": ["10s", "30s", "1m", "5m", "15m"]},
  "title": "K8s Pod Uptime (Namespace / Deployment / Pod)",
  "uid": null,
  "version": 1
}
